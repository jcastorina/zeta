                </form>
                <form action="/newParty" method="GET">
                    <button type="submit">New Party</button>
                </form>
                <form action="/join" method="GET">
                    <button type="submit">Join Party</button>
                </form>
            </div>
        </div>
        <br>
        <br>
        <br>
        <div id="main" class="main">
            <strong class="green">ONLINE:</strong> <%= online %>
        </div>
        <br>
        <form action="/logout?_method=DELETE" method="POST">
            <button type="submit">Log Out</button>
        </form>
    </body>
    <script src="../src/promise.js"></script>
</html>